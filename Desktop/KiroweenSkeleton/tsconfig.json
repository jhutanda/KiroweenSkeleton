{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@apps/*": ["./apps/*"],
      "@backend/*": ["./backend/*"]
    }
  },
  "include": ["apps/**/*", "shared/**/*", "backend/**/*"],
  "references": [
    { "path": "./apps/notes-app" },
    { "path": "./apps/tasks-app" },
    { "path": "./shared/components" },
    { "path": "./shared/hooks" },
    { "path": "./shared/types" },
    { "path": "./shared/utils" }
  ]
}